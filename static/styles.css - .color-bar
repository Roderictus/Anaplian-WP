@keyframes colorCycle {
    0% { background-color: var(--color-bar-orange); }
    25% { background-color: var(--color-bar-cream); }
    50% { background-color: var(--color-bar-teal); }
    75% { background-color: var(--color-bar-blue); }
    100% { background-color: var(--color-bar-orange); }
}

.color-bar {
    animation: colorCycle 10s infinite;
}
